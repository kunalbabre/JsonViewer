{
  "name": "json-viewer-extension",
  "version": "1.0.2",
  "description": "Beautiful JSON viewer Chrome extension with Tree, Schema, YAML, and Raw views",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "node scripts/build.js",
    "build:prod": "node scripts/build.js --minify",
    "package": "node scripts/package-release.mjs",
    "repackage": "node scripts/package-release.mjs --no-bump",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "test": "node --test tests/",
    "test:e2e": "node tests/e2e/editor-test.mjs",
    "test:perf": "node tests/e2e/performance-test.mjs",
    "test:popup": "PWDEBUG=1 node tests/e2e/popup-test.mjs",
    "test:devtools": "node tests/e2e/devtools-test.mjs",
    "test:full": "node tests/e2e/full-e2e-test.mjs",
    "doc": "node scripts/generate-docs.mjs",
    "record": "node scripts/record-demo.mjs",
    "clean": "rm -rf dist/ *.zip"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.260",
    "eslint": "^8.57.0",
    "playwright": "^1.40.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/user/json-viewer"
  },
  "keywords": [
    "json",
    "viewer",
    "chrome-extension",
    "developer-tools"
  ]
}
