{
  "name": "json-viewer-extension",
  "version": "1.0.1",
  "description": "Beautiful JSON viewer Chrome extension with Tree, Schema, YAML, and Raw views",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "node scripts/build.js",
    "build:prod": "node scripts/build.js --minify",
    "package": "npm run build:prod && node scripts/package.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "test": "node --test tests/",
    "clean": "rm -rf dist/ *.zip"
  },
  "devDependencies": {
    "@anthropic-ai/eslint-config": "^1.0.0",
    "@types/chrome": "^0.0.260",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/user/json-viewer"
  },
  "keywords": [
    "json",
    "viewer",
    "chrome-extension",
    "developer-tools"
  ]
}
